<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ybc.bmbhome.function.UserMoodActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_user_mood_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sasasasdsasa"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="最近一周的心情"
        android:layout_below="@+id/toolbar_user_mood_line"
        android:layout_centerHorizontal="true" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/mood_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@+id/sasasasdsasa"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:transitionName="line"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mood_pie_chart"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="心情建议"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textViewmoodjianyi" />
        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="心情建议"
            android:layout_below="@id/textView100"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textViewmoodjianyi" />
        <TextView
            android:id="@+id/textViewmoodjianyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心情建议"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
